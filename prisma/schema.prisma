// Schema for a simple URL shortener
// This schema tracks short links by associating them to a user

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
  email     String   @unique
}

model Post {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String
  source    String // will eventually be a relation to a source
}

model Event {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String
  startsAt  DateTime
  endsAt    DateTime
  imageUri  String
  location  String
  source    String // will eventually be a relation to a source
}

model Source {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company   String // will eventually be a relation to a company
  type      Type     @default(WEBSITE)
  uri       String
}

enum Type {
  FACEBOOK
  WEBSITE
}
